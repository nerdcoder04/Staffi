              "raw": "{\n    \"email\": \"employee@example.com\",\n    \"password\": \"securepassword\",\n    \"name\": \"Employee Name\",\n    \"role\": \"DEVELOPER\",\n    \"department\": \"ENGINEERING\"\n}",
